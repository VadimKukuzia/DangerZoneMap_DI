<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.DangerZoneMap_DI.TextViewTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline4</item>
    </style>

    <style name="Widget.DangerZoneMap_DI.RoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.DangerZoneMap_DI.NavigationViewDay"
        parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="Widget.DangerZoneMap_DI.NavigationViewNight"
        parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:alpha">0.95</item>
    </style>

    <style name="Widget.DangerZoneMap_DI.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">36dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
    </style>

</resources>