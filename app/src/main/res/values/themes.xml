        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryVariant">@color/brown_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_grey_light</item>
        <item name="colorSecondaryVariant">@color/blue_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimaryDark">@color/brown_dark</item>
